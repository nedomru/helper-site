---
interface Props {
  title?: string;
}

const { title = "Хелпер - Расширение для браузера" } = Astro.props;
---

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="Расширение для браузера, упрощающее и оптимизирующее твою работу" />
  </head>
  <body style="font-family: system-ui, -apple-system, sans-serif; max-width: 800px; margin: 0 auto; padding: 2rem; line-height: 1.6;">
    <slot />
  </body>
</html>
